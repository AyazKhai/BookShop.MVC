@{
    ViewData["Title"] = "Assign Admin Role";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>

<div class="wrapper">
    <h1>@ViewData["Title"]</h1>

    <p>Write users email to give admin role </p>

    @if (@TempData["Message"] != null)
    {
        <span  class="text-danger" style="color: red;">@TempData["Message"]</span>
    }

    <form asp-controller="Administration" asp-action="AssignAdminRole" method="post">
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control" id="email" name="email" required />
        </div>
        <button type="submit" class="btn_addToCart">Assign Admin Role</button>
    </form>
</div>
